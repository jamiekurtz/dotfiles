[user]
	name = Jamie Kurtz
	email = jamie@jamiekurtz.com


[difftool "kdiff3"]
    path = /usr/bin/kdiff3
    trustExitCode = false
[difftool]
        prompt = false
[diff]
	tool = meld
[mergetool "kdiff3"]
    path = /usr/bin/kdiff3
    trustExitCode = false
[mergetool]
        keepBackup = false
[merge]
	tool = kdiff3
[push]
	default = simple
[core]
    editor = vim

[alias]
    ls = log --pretty=format:"%C(yellow)%h\\ %Cgreen%cr\\ %Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    unstage = reset HEAD --
    last = log -1 HEAD
    diffd = difftool -d develop
[color]
	ui = true
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[diff "tool"]
	cmd = meld -d
[url "git@github.com:"]
	insteadOf = https://github.com/
